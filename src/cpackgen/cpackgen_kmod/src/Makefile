#############################################################################
# Makefile                                                                  #
#############################################################################

SRC := $(shell pwd)

all:
	$(MAKE) -C $(KERNEL_SRC) M=$(SRC)
	$(MAKE) INSTALL_MOD_PATH=$(MOD_DIR) -C $(KERNEL_SRC) M=$(SRC) modules_install

clean:
		$(MAKE) -C $(KERNEL_SRC) M=$(SRC) clean

#############################################################################
