%_topdir /tmp/rpm
%_tmppath %{_topdir}
%_dbpath %{_topdir}/rpmdb
%_builddir ./
%_rpmdir ./bld/rpm
%_sourcedir %{_topdir}
%_specdir %{_topdir}
%_srcrpmdir %{_topdir}
%_buildrootdir %{_topdir}/rpmbuild
%buildroot %{_buildrootdir}/%{name}-%{version}-%{release}

#binary packages path
%_libdir /usr/lib
%_testbindir /usr/local/bin
#host
%_hostdir /opt/x86vm
%_hostprovisiondir /opt/x86vm/provision

#virtcluster paths.
%virtcluster_lib %{buildroot}%{_libdir}
%virtcluster_testbin %{buildroot}%{_testbindir}
#host
%virtcluster_host_dir %{buildroot}%{_hostdir}
%virtcluster_host_provision_dir %{buildroot}%{_hostprovisiondir}

#vircluster macros
%virtcluster_rm_br rm -rf %{buildroot}
%virtcluster_c_lib_p mkdir -p %{virtcluster_lib}
%virtcluster_c_testbin_p mkdir -p %{virtcluster_testbin}
#host
%virtcluster_host_p mkdir -p %{virtcluster_host_dir}
%virtcluster_host_provision_p mkdir -p %{virtcluster_host_provision_dir}

#file perm, owner, group, dir perm
%virtcluster_lib_perm %defattr(0644,root,root,0644)
%virtcluster_bin_perm %defattr(0755,root,root,0755)
#host
%virtcluster_host_scripts_perm %defattr(0755,root,root,0755)
